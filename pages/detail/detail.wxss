/* pages/detail/detail.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page {
  background-color: #f2f2f2;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
}

.weui-tab__content {
  text-align: center;
  padding-bottom: 100rpx;
}

swiper {
  width: 100%;
  height: 600rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.bottom-tab {
  border-top: 1px solid #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: white;
}

.bottom-tab view {
  height: 100rpx;
  line-height: 100rpx;
}

.bottom-left {
  background-color: #EEB4B4;
  color: black;
}

.bottom-mid {
  background-color: orangered;
}

.bottom-right {
  background-color: #dc3737;
}

.servie {
  text-align: left;
  color: darkgray;
  font-size: 14px;
}

.weui-flex__item icon {
  margin: 0px 5px;
}

.marketprice {
  color: #dc3737;
  margin-right: 10px;
}

.productprice {
  color: darkgrey;
  text-decoration: line-through;
  font-size: 14px;
}
