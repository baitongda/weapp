/**index.wxss**/

page {
  background-color: #f2f2f2;
}

.nav-search {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
}

/*顶部结束*/

swiper-item {
  width: 100%;
}

.swiperimg image {
  width: 100%;
}

.tuijian-inline {
  margin: 10rpx 0rpx;
  display: flex;
}

.img image {
  margin: 0px 25%;
  width: 50%;
  height: 90rpx;
}

.tuijian-text {
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.goodscroll {
  height: 100%;
  position: fixed;
  top: 0;
}

.toTop {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: -60px;
  right: 10px;
  border: 1px solid #eee;
  border-radius: 50%;
  background-color: rgba(238, 238, 238, 0.8);
}

.toTop image {
  margin: 0 12.5px;
  margin-top: 5px;
  margin-bottom: -5px;
  width: 50rpx;
  height: 50rpx;
}

.toTop view {
  text-align: center;
}

.enterload {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.loadimg .weui-loading {
  padding: 10px;
  margin-top: 40%;
  margin-left: 45%;
}

.loadagain image {
  width: 100px;
  height: 80px;
}

.loadtext {
  font-size: 16px;
  color: #fff;
  background-color: #dc3737;
  border: 1px solid #dc3737;
  border-radius: 10%;
  width: 100px;
  text-align: center;
}

.loadagain {
  margin-top: 40%;
  margin-left: 35%;
}
